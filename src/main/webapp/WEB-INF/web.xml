<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InBoundAndOutBoundConferenceURL</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.InBoundAndOutBoundConferenceURL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InboundXMLWithBackEnd</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.InboundXMLWithBackEnd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificacionPorVencimientoDePago</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.NotificacionPorVencimientoDePago</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutBoundCallURL</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.OutBoundCallURL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutBoundSMSURL</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.OutBoundSMSURL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmail</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.SendEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmailCustom</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.SendEmailCustom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GatherEmociones</servlet-name>
        <servlet-class>service.cpaas.workshop.cauca.servlets.GatherEmociones</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InBoundAndOutBoundConferenceURL</servlet-name>
        <url-pattern>/InBoundAndOutBoundConferenceURL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InboundXMLWithBackEnd</servlet-name>
        <url-pattern>/InboundXMLWithBackEnd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificacionPorVencimientoDePago</servlet-name>
        <url-pattern>/NotificacionPorVencimientoDePago</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutBoundCallURL</servlet-name>
        <url-pattern>/OutBoundCallURL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutBoundSMSURL</servlet-name>
        <url-pattern>/OutBoundSMSURL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmail</servlet-name>
        <url-pattern>/SendEmail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmailCustom</servlet-name>
        <url-pattern>/SendEmailCustom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GatherEmociones</servlet-name>
        <url-pattern>/GatherEmociones</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
